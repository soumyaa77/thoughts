
<%- include("partials/header"); -%>
   
<div class="page-container container">
  <h1 class="title">COMPOSE</h1>
  <form id="newPost" class="compose" action="/compose" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label>TITLE</label>
        <input type="text" class="form-control" name="title" required>
      </div>
      <div class="form-group">
        <label>ENTRY</label>
        <textarea class="form-control" rows="5" name="post" required></textarea>
      </div>


      <div class="form-group">
          <label><b>THUMBNAIL</b>
          <br>
          <small>PICTURES FOR LOOKBOOK!!</small>
          </label>

          <div class="image-grid">
              <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <img id="gridimage-1.jpeg" src="https://images.pexels.com/photos/5540782/pexels-photo-5540782.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load" class="input img-fluid mb-4" alt=""
                          data-wow-delay="0.1s" >
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <img id="gridimage-2.jpeg" src="https://images.pexels.com/photos/3271946/pexels-photo-3271946.jpeg?auto=compress&cs=tinysrgb&w=600" class="input img-fluid mb-4" alt=""
                          data-wow-delay="0.1s">
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <img id="gridimage-3.jpeg" src="https://images.pexels.com/photos/16993516/pexels-photo-16993516/free-photo-of-close-up-of-kitten.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load" class="input img-fluid mb-4" alt=""
                          data-wow-delay="0.1s">
                    </div>

              </div>

              <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <img id="gridimage-4.jpeg" src="https://images.pexels.com/photos/2820808/pexels-photo-2820808.jpeg?auto=compress&cs=tinysrgb&w=600" class="input img-fluid mb-4" alt=""
                          data-wow-delay="0.1s">
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <img id="gridimage-5.jpeg" src="https://images.pexels.com/photos/17224260/pexels-photo-17224260/free-photo-of-cup-of-coffee-with-chamomile-flower-next-to-cut-up-strawberries.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load" class="input img-fluid mb-4" alt=""
                          data-wow-delay="0.1s">
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <img id="gridimage-6.jpeg" src="https://images.pexels.com/photos/13984549/pexels-photo-13984549.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load" class="input img-fluid mb-4" alt=""
                          data-wow-delay="0.1s">
                    </div>

              </div>
          </div>
      </div>

      <div id="customFile" class="form-group">
        <label><b>OR, SELECT YOUR OWN -</b></label>
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="uploadedImage" name="uploadedImage" value="">
          <label class="custom-file-label" for="validatedCustomFile">Choose File...</label>
        </div>
      </div>



      <input name="image" id="selectedImage" type="hidden" value="">
      <button class="btn btn-primary" type="submit" name="button">PUBLISH</button>


  </form>
</div>


<%- include("partials/footer"); -%>
